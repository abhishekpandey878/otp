<html>
<head>
    <title>Dashboard</title>
</head>
<body class="app" data-gr-c-s-loaded="true">
<div id="loader" class="fadeOut">
    <div class="spinner"></div>
</div>

<div>
    <div class="container">
    {{#each doc}}
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="otp_details col-md-7">
                        <h4 class="otp_title"><b>{{phone_number}}</b></h4>
                        <div><b>Otp:</b> {{code}}</div>
                        <div><b>Verified:</b> {{verified}}</div>
                        <div><b>Time Limit Exceeded:</b> {{time_limit_exceeded}}</div>
                        <div><b>Otp sent at:</b> {{created_at}}</div>  
                        <div><b>Verified at:</b> {{updated_at}}</div>                      
                    </div>                
                </div>
            </div>
        </div>
        <hr>
    {{/each}}
    </div>
    
    <footer>
        <div class="text-center container">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                </ul>
            </nav>
        </div>
    </footer>
</div>

<script>
    var totalNumberOfOtps = {{totalOtpTokens}};
    var pages = Math.ceil(totalNumberOfOtps/20);
    var html = '';
    var query = window.location.search;
    console.log(query)
    var i=0;
    for(i=0; i<pages; i++){
        html += `<li class="page-item"><a class="page-link" href="/api/otp/otp-sms?page_number=${i+1}">${i+1}</a></li>`;
    }
    $(".pagination").append(html);

</script>  

</body>
</html>